<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/img1"
                />

            <EditText
                android:id="@+id/login_gmail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Email"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/inputs"
                android:layout_below="@+id/img"

                android:padding="4dp"

                />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Password"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/inputs"
                android:layout_below="@+id/login_gmail"
                android:padding="4dp"

                />


            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Forget Password ?"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="17dp"
                android:layout_below="@+id/login_password"
                android:padding="4dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentEnd="true"
                android:textAlignment="textEnd"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgot_password"
                android:padding="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:text="Login"
                android:background="@drawable/buttons"
                android:textColor="@color/white"
                android:textSize="24sp"
                />

            <TextView
                android:id="@+id/need_an_account"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Need an Account ?"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="17dp"
                android:layout_below="@+id/login_btn"
                android:padding="4dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentEnd="true"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textStyle="bold"
                />



            <TextView
                android:id="@+id/login_using"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="or Login Using your"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="17dp"
                android:layout_below="@+id/need_an_account"
                android:padding="4dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentEnd="true"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textStyle="bold"
                />


            <Button
                android:id="@+id/phone_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_using"
                android:padding="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:text="Phone"
                android:drawableStart="@drawable/ic_phone_in_talk_black_24dp"
                android:background="@drawable/buttons"
                android:textColor="@color/white"
                android:textSize="14sp"
                />


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>